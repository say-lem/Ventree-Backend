{
  "compilerOptions": {
    // Folder structure
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment
    "target": "ES2020",
    "module": "CommonJs",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    // "moduleResolution": "",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    // Type support
    "types": ["node"],
    "skipLibCheck": true,

    // Code strictness
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,

    // Map and declarations
    "sourceMap": true,
    "declaration": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
